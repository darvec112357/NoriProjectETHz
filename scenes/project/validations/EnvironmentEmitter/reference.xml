<scene version="3.0.0">
    <!-- Integrator -->
    <integrator type="path"/>

    <!-- Perspective camera -->
    <sensor type="perspective">
        <transform name="to_world">
            
            <lookat target="0,0,1" origin="5,5,1" up="0,0,1"/>
        </transform>
        <float name="fov" value="100"/>

        <film type="hdrfilm">
            <integer name="height" value="600"/>
            <integer name="width" value="800"/>
        </film>

        <sampler type="independent">
            <integer name="sample_count" value="32"/>
        </sampler>

    </sensor>

    <shape type="sphere">
        <point name="center" value="0,0,1"/>
        <float name="radius" value="30"/>

        <emitter type="envmap">
            <string name="filename" value="cloudy.exr"/>    <!-- have to choose proper path, ../scenes/project/envmaps/envmap.exr"-->
        </emitter>
    </shape>

    <shape type="sphere">
        <point name="center" value="0,0,1"/>
        <float name="radius" value="4"/>  

        <bsdf type="conductor">
            <string name="material" value="none"/>
        </bsdf>

    </shape>
